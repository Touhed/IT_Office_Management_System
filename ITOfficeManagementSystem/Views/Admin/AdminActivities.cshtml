@model ITOfficeManagementSystem.Models.Admin
@{
    ViewData["Title"] = "Admin Page";
}
<div>
    <h1 style="text-align: center;">Welcome To IT Ofice Management System</h1>
</div>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="background-color: darkgray; text-align: center; font-family: 'Times New Roman', Times, serif;">
    <div class="form-group">
        <h2 style="text-align: center;">Choose What DO You Want?</h2>
        <hr />
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <form asp-controller="UserRole" asp-action="AddUserRole" method="get">
                        <button class="btn btn-outline-success btn-lg">Add User Role</button>
                    </form>
                    <br />
                    <form asp-controller="Admin" asp-action="AddAdmin" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Admin</button>
                    </form>
                    <br />
                    <form asp-controller="Users" asp-action="Register" method="get">
                        <button class="btn btn-outline-success btn-lg">Create User Account</button>
                    </form>
                    <br />
                    <form asp-controller="Employee" asp-action="AddEmployee" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Employee</button>
                    </form>
                    <br />
                    <form asp-controller="Client" asp-action="AddClient" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Customer</button>
                    </form>
                    <br />
                    <form asp-controller="AssignTask" asp-action="AddTask" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Task</button>
                    </form>
                    <br />
                    <form asp-controller="Event" asp-action="AddEvent" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Event</button>
                    </form>
                    <br />
                    <form asp-controller="Notice" asp-action="AddNotice" method="get">
                        <button class="btn btn-outline-success btn-lg">Add New Notice</button>
                    </form>
                </div>
                <div class="col-lg-6">
                    <form asp-controller="UserRole" asp-action="UserRoleList" method="get">
                        <button class="btn btn-outline-info btn-lg">User Role List</button>
                    </form>
                    <br />
                    <form asp-controller="Admin" asp-action="AdminList" method="get">
                        <button class="btn btn-outline-info btn-lg">Admin List</button>
                    </form>
                    <br />
                    <form asp-controller="Users" asp-action="UserList" method="get">
                        <button class="btn btn-outline-info btn-lg">User List</button>
                    </form>
                    <br />
                    <form asp-controller="Employee" asp-action="EmployeeList" method="get">
                        <button class="btn btn-outline-info btn-lg">Employee List</button>
                    </form>
                    <br />
                    <form asp-controller="Client" asp-action="ClientList" method="get">
                        <button class="btn btn-outline-info btn-lg">Customers List</button>
                    </form>
                    <br />
                    <form asp-controller="AssignTask" asp-action="TaskList" method="get">
                        <button class="btn btn-outline-info btn-lg">Task List</button>
                    </form>
                    <br />
                    <form asp-controller="Event" asp-action="EventList" method="get">
                        <button class="btn btn-outline-info btn-lg">Event List</button>
                    </form>
                    <br />
                    <form asp-controller="Notice" asp-action="NoticeList" method="get">
                        <button class="btn btn-outline-info btn-lg">Notice List</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>