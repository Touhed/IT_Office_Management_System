@model ITOfficeManagementSystem.ViewModels.EmployeeSalaryVM

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="align-content: center; text-align: center;">
    <h4>Update Employee Salary Information</h4>
    <hr />
    <div class="container" style="width: 50%;">
        <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
        <div asp-validation-summary="All"></div>
        <form class="form-horizontal" asp-controller="EmployeeSalary" asp-action="UpdateEmployeeSalary" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaryId" />

            <div class="form-group row">
                <label asp-for="SalaryId" class="col-sm-3 col-form-label">Salary Id: </label>
                <div class="col-sm-9">
                    <input asp-for="SalaryId" class="form-control" type="text" value="@Model.SalaryId" readonly/>
                    <span asp-validation-for="SalaryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EmployeeId" class="col-sm-3 col-form-label">Employee Id: </label>
                <div class="col-sm-9">
                    <select asp-items="@ViewBag.Employeeid" asp-for="EmployeeId" class="form-control" required>
                        <option hidden disabled selected>Please Select Employee Name</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="AttendanceId" class="col-sm-3 col-form-label">Attendance Id: </label>
                <div class="col-sm-9">
                    <select asp-items="@ViewBag.Attendanceid" asp-for="AttendanceId" class="form-control" required>
                        <option hidden disabled selected>Please Select Attendance Id</option>
                    </select>
                    <span asp-validation-for="AttendanceId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="BasicSalary" class="col-sm-3 col-form-label">Basic Salary: </label>
                <div class="col-sm-9">
                    <select asp-items="@ViewBag.BasicSalary" asp-for="BasicSalary" class="form-control" required>
                        <option hidden disabled selected>Please Select Basic Salary</option>
                    </select>
                    <span asp-validation-for="BasicSalary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Tax" class="col-sm-3 col-form-label">Tax: </label>
                <div class="col-sm-9">
                    <input asp-for="Tax" class="form-control" type="text" value="@Model.Tax" />
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-form-label col-sm-3 pt-0">Benifits: </label>
                    <div class="col-sm-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Benifits" asp-for="Benifits" value="1000">
                            <label class="form-check-label" asp-for="Benifits">Travel Allowance</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Benifits" asp-for="Benifits" value="1000">
                            <label class="form-check-label" asp-for="Benifits">Medical Allowance</label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label asp-for="HourPrice" class="col-sm-3 col-form-label">Hour Amount: </label>
                <div class="col-sm-9">
                    <input asp-for="HourPrice" class="form-control" type="text" value="@Model.HourPrice" />
                    <span asp-validation-for="HourPrice" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <label asp-for="TotalHourPrice" class="col-sm-3 col-form-label">Total Hour Price: </label>
                <div class="col-sm-9">
                    <input asp-for="TotalHourPrice" class="form-control" type="text" value="@Model.TotalHourPrice" />
                    <span asp-validation-for="TotalHourPrice" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group row">
                <label asp-for="Withdraw" class="col-sm-3 col-form-label">Withdraw: </label>
                <div class="col-sm-9">
                    <input asp-for="Withdraw" class="form-control" type="text" value="@Model.Withdraw" />
                    <span asp-validation-for="Withdraw" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NetSalary" class="col-sm-3 col-form-label">Net Salary: </label>
                <div class="col-sm-9">
                    <input asp-for="NetSalary" class="form-control" type="text" value="@Model.NetSalary" />
                    <span asp-validation-for="NetSalary" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <label asp-for="PaymentStatus" class="col-sm-3 col-form-label">Payment Status: </label>
                <div class="col-sm-9">
                    <input asp-for="PaymentStatus" class="form-control" type="text" value="@Model.PaymentStatus" />
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group" style="padding-left: 30%;">
                <input type="submit" value="Update" class="btn btn-outline-success" /> |
                <a asp-controller="EmployeeSalary" asp-action="EmployeeSalaryList" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
