@{
    Layout = null;
}
@model ITOfficeManagementSystem.ViewModels.UserVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login - IT_OMS</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <h2 style="text-align:center; font-weight:bold;">Welcome => IT Office Management System</h2>
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-success"><center><h3>@ViewBag.Login</h3></center></div>
                                    <div asp-validation-summary="All"></div>
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Please Login!</h1>
                                    </div>
                                    <form class="user" asp-controller="Home" asp-action="Index" method="post">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="Password">
                                        </div><hr />
                                        @*<div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" Id="RememberMe">
                                                <label class="custom-control-label" for="RememberMe">Remember Me</label>
                                            </div>
                                        </div>*@
                                        <input class="btn btn-outline-primary btn-user btn-block" type="submit" value="Login" style="font-weight: bold; font-size: large;"/>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Users" asp-action="ForgetPassword">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        @*<a class="small" asp-controller="Users" asp-action="Register">Create an Account!</a>*@
                                        Don't have account ? Contact with Admin
                                        <hr />
                                        <b>
                                            <a data-toggle="modal" data-target="#helpModal">Working Procedure</a>
                                        </b>
                                        <!-- Modal -->
                                        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="helpModal" class="modal fade">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header" style="background-color:#6ab04c">
                                                        <h4 class="modal-title text-center" id="myModalLabel">Guideline for Admin</h4>
                                                    </div>
                                                    <div class="modal-body" style="text-align: left;">
                                                        <p><b class="h4">Step  1:</b> Login to the system using 'admin@gmail.com' as username and 'admin' as password</p>
                                                        <p><b class="h4">Step  2:</b> Add User Type on User Role Management</p>
                                                        <p><b class="h4">Step  3:</b> Add new User on Users Management.</p>
                                                        <p><b class="h4">Step  4:</b> Add Employee or Customer information on Employee or Customer Management.</p>
                                                        <p><b class="h4">Step  5:</b> Using Employee information module's 'Email' and 'Password' login to the Attendance module.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button data-dismiss="modal" class="btn btn-outline-info" type="button"> <i class="fas fa-check fa-lg"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- modal -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>