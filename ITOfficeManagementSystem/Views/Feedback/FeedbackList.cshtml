@model IEnumerable<ITOfficeManagementSystem.Models.Feedback>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feedback - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="align-content: center; text-align: center;">
    <p>
        <a asp-controller="Feedback" asp-action="AddFeedback">Create New</a>
    </p>
    <h4>Feedback Information List</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Reliability)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Design)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EaseOfUse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Security)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AbilityToIntegrate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AbilityToCollaborate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reliability)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Design)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EaseOfUse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Security)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AbilityToIntegrate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AbilityToCollaborate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-controller="Feedback" asp-action="UpdateFeedback" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-success">Edit</a> |
                        <a asp-controller="Feedback" asp-action="FeedbackDetails" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-info">Details</a> |
                        <a asp-controller="Feedback" asp-action="DeleteFeedback" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>
                    </td>
                    <!-- Delete Modal-->
                    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="FeedbackModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="FeedbackModalLabel">Ready to Delete?</h5>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">Select "Delete" below if you are ready to Delete this Feedback Information.</div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                    <form asp-controller="Feedback" asp-action="DeleteFeedback">
                                        <input type="hidden" asp-for="@item.FeedbackId" />
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
            }
        </tbody>
    </table>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>
