@model IEnumerable<ITOfficeManagementSystem.ViewModels.AttendanceVM>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Attendance - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="align-content: center;text-align: center;">
    <div class="container" style="width: 60%;">
        <h2>Attendance List</h2>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoginTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogoutTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoginDuration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalDuration)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LogoutTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginDuration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalDuration)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><br />

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>

