@model ITOfficeManagementSystem.Models.Feedback

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feedback - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="align-content: center; text-align: center;">
    <div class="container" style="width: 100%;">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Feedback Details</h4>
        <hr />
        <table class="table-hover" style="width: 100%;">
            <tr>
                <th>Feedback Id:</th>
                <td>@Model.FeedbackId</td>
            </tr>
            <tr>
                <th>How satisfied are you with the reliability of this software?</th>
                <td>@Model.Reliability</td>
            </tr>
            <tr>
                <th>How satisfied are you with the look and feel of this software?</th>
                <td>@Model.Design</td>
            </tr>
            <tr>
                <th>How satisfied are you with this software's ease of use?</th>
                <td>@Model.EaseOfUse</td>
            </tr>
            <tr>
                <th>How satisfied are you with the security of this software?</th>
                <td>@Model.Security</td>
            </tr>
            <tr>
                <th>How satisfied are you with the ability to integrate other software with this software?</th>
                <td>@Model.AbilityToIntegrate</td>
            </tr>
            <tr>
                <th>How satisfied are you with the ability to collaborate with other users on this software?</th>
                <td>@Model.AbilityToCollaborate</td>
            </tr>
            <tr>
                <th>Do you have any thoughts on how to improve this software?</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Client Id: </th>
                <td>@Model.ClientId</td>
            </tr>
        </table>
        <br />

        <form asp-controller="Feedback" asp-action="DeleteFeedback">
            <input type="hidden" asp-for="FeedbackId" />
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a asp-controller="Feedback" asp-action="FeedbackList" class="btn btn-outline-info">Back to List</a>
        </form>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
</body>
</html>
