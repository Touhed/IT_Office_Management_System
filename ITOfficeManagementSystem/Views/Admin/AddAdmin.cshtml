@model ITOfficeManagementSystem.Models.Admin

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin - IT_OMS</title>
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body style="align-content: center; text-align: center;">
    <h4>Add New Admin</h4>
    <hr />
    <div class="container" style="width: 50%;">
        <div class="text-success"><center><h3>@ViewBag.Success</h3></center></div>
        <div asp-validation-summary="All"></div>
        <form class="form-horizontal" asp-controller="Admin" asp-action="AddAdmin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-3 col-form-label">First Name: </label>
                <div class="col-sm-9">
                    <input asp-for="FirstName" class="form-control" placeholder="Enter Admin First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-3 col-form-label">Last Name: </label>
                <div class="col-sm-9">
                    <input asp-for="LastName" class="form-control" placeholder="Enter Admin Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-form-label col-sm-3 pt-0">Gender: </label>
                    <div class="col-sm-4">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gender" asp-for="Gender" value="Male">
                            <label class="form-check-label" asp-for="Gender">Male</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gender" asp-for="Gender" value="Female">
                            <label class="form-check-label" asp-for="Gender">Female</label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-3 col-form-label">Email: </label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control" placeholder="Enter Admin Email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Contact" class="col-sm-3 col-form-label">Contact: </label>
                <div class="col-sm-9">
                    <input asp-for="Contact" class="form-control" placeholder="Enter Admin Contact" />
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-3 col-form-label">Address: </label>
                <div class="col-sm-9">
                    <input asp-for="Address" class="form-control" placeholder="Enter Admin Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
                <label asp-for="UserRoleId" class="col-sm-3 col-form-label">User Role Id: </label>
                <div class="col-sm-9">
                    <input asp-for="UserRoleId" class="form-control" placeholder="Enter User Role Id" />
                    <span asp-validation-for="UserRoleId" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group" style="padding-left: 30%;">
                <input type="submit" value="Create" class="btn btn-outline-success" /> |
                <a asp-controller="Admin" asp-action="AdminList" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
